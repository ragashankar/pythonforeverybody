# With try and except
Hours_str = raw_input("Enter Hours: ")
try:
	Hours = float(Hours_str)
except:
    print 'Enter numeric input'
---------------------------------------------------------------------------------------------------------------------------------------
# With try and except
Rate_str = raw_input("Enter rate: ")
try:
	Rate = float(Rate_str)
except:
    print 'Enter numeric input'
