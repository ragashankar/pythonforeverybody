# Sorting from a file
fopen= open('romeo.txt')
dct=dict()
for line in fopen:
    words = line.split()
    for word in words:
        dct[word]=dct.get(word,0)+1
# Sort by values
lst=list()
for key,val in dct.items():
    lst.append((val,key))
print 'The unsorted list is ',lst

lst.sort(reverse=True)

print 'The desc order is ',lst

lst.sort()

print 'The default order is ',lst
# To find the bigword and its value in dict
bigcount = None
bigword = None

for w,c in dct.items():
    if bigcount is None or c>bigcount:
        bigword=w
        bigcount=c
print bigword,bigcount

#Top 10 common words
lst.sort(reverse=True)
for val,key in lst[:10]:
    print key,val # Prints the top 10 most comman words

#Easiest way to sort based on values
dct2 = {'c':45,'b':55,'j':90,'a':67}
print sorted([(v,k) for k,v in dct2.items()])
    
    
