# Functions in list
nums=[19,44,67,84,32,78,9,89]
print max(nums)
print min(nums)
print sum(nums)
print sum(nums)/len(nums)
-----------------------------------------------------------------------------------------------------------------------------------
# Find Average in a list
total=0
count=0
while True:
    val=raw_input("Enter the value ")   
    if val=='done':
        break
    num=float(val)    
    total=total+num
    count=count+1
print 'Average is',total/count

nlist=list()
-----------------
while True:
    ip=raw_input('Enter the value ')
    if ip=='done': break
    num=float(ip)
    nlist.append(num)
print sum(nlist)/len(nlist)
-----------------------------------------------------------------------------------------------------------------------------------
# Split the values in a variableto form a list

string='I am Raghavendran of the house pammal'
r=string.split()
print r
for i in r:
    print i

str1='A;friend;in;need'
y=str1.split(';')
print y
